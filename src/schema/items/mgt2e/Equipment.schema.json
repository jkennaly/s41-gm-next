{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "allOf": [
      {
        "$ref": "./CatalogItem.schema.json"
      },
      {
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the equipment."
          },
          "mass": {
            "type": "number",
            "description": "The mass or weight of the equipment."
          },
          "tl": {
            "type": "number",
            "description": "The tech level of the equipment."
          },
          "traits": {
            "type": "array",
            "items": {
              "type": "object"
            },
            "description": "Traits or characteristics associated with the equipment."
          }
        },
        "required": ["name", "mass", "tl", "traits"]
      }
    ]
  }
  